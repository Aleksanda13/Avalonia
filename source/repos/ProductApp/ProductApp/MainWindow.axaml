<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProductApp.MainWindow"
		Background="White"
        Title="ProductApp">
	<StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Название продукта:" Margin="0,0,0,5" Foreground="Black"/>
		<TextBox x:Name="ProductNameInput" Width="200"/>

		<TextBlock Text="Цена продукта:" Margin="0,10,0,5" Foreground="Black"/>
		<TextBox x:Name="ProductPriceInput" Width="200"/>

		<Button Content="Добавить продукт"
                Width="200" Margin="0,10,0,0"
                Click="AddProduct_Click"
                Background="#007ACC" Foreground="White"
                BorderBrush="Transparent"/>

		<Button Content="Показать список"
                Width="200" Margin="0,5,0,0"
                Click="ShowProductList_Click"
                Background="#007ACC" Foreground="White"
                BorderBrush="Transparent"/>
	</StackPanel>
</Window>


